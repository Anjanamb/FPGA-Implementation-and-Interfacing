module control(
    input mclk,
    input toggle,  //Use this as the control input
	 output [19:0] counter
    );


always @(posedge mclk)
begin
	if(counter == 0)
		begin
			if(toggle == 0)
					if(control == 0)
							control <= control;
					else
							control <= control - 500;
			if(toggle == 1)
					if(control == 'd110000)
							control <= control;
					else
							control <= control + 500;
		end

end
